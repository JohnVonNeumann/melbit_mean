          p.rating
            span.glyphicon.glyphicon-star
            span.glyphicon.glyphicon-star
            span.glyphicon.glyphicon-star
            span.glyphicon.glyphicon-star-empty
            span.glyphicon.glyphicon-star-empty

          p 120 Spencer Street, Melbourne, 3000
            .panel.panel-primary
              .panel-heading
                h2.panel-title Opening Hours
              .panel-body
                p Monday - Friday : 7:00am - 7:00pm
                p Satuday         : 7:00am - 12:00pm
                p Sunday          : 7:00am - 12:00pm
